<?xml version="1.0" encoding="UTF-8" ?>
<odoo>



    <record id="view_product_price_history_graph" model="ir.ui.view">
        <field name="name">product.price.history.graph</field>
        <field name="model">product.price.history</field>
        <field name="arch" type="xml">
            <graph type="line">
                <field name="price" type="measure"/>
                <field name="create_date_x"/>
            </graph>
        </field>
    </record>

    <record id="view_product_price_history_tree" model="ir.ui.view">
        <field name="name">product.price.history.tree</field>
        <field name="model">product.price.history</field>
        <field name="arch" type="xml">
            <tree default_order="id desc">
                <field name="create_date" string="Changed On"/>
                <field name="create_uid" string="Changed By"/>
                <field name="product_tmpl_id" column_invisible="True"/>
                <field name="product_id" column_invisible="True"/>
                <field name="price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="currency_id" column_invisible="True"/>
            </tree>
        </field>
    </record>

    <record id="action_product_price_history" model="ir.actions.server">
        <field name="name">View Price Changes</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="binding_model_id" ref="product.model_product_template"/>
        <field name="state">code</field>
        <field name="code">action = model.action_view_price_history()</field>
        <field name="binding_view_types">form</field>
    </record>

    <record id="action_product_price_history_variants" model="ir.actions.server">
        <field name="name">View Price Changes</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="binding_model_id" ref="product.model_product_product"/>
        <field name="state">code</field>
        <field name="code">action = model.action_view_price_history()</field>
        <field name="binding_view_types">form</field>
    </record>




</odoo>