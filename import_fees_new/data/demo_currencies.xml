<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Directly enable multi-currency group for admin user -->
        <record id="base.group_multi_currency" model="res.groups">
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <!-- Activate currencies needed for demo data by directly updating the records -->
        <record id="base.EUR" model="res.currency">
            <field name="active" eval="True"/>
        </record>
        
        <record id="base.JPY" model="res.currency">
            <field name="active" eval="True"/>
        </record>
        
        <record id="base.CNY" model="res.currency">
            <field name="active" eval="True"/>
        </record>
        
        <record id="base.BRL" model="res.currency">
            <field name="active" eval="True"/>
        </record>
        
        <record id="base.CAD" model="res.currency">
            <field name="active" eval="True"/>
        </record>

        <!-- Add sample currency rates -->
        <record id="demo_currency_rate_eur" model="res.currency.rate">
            <field name="name">2025-03-19</field>
            <field name="rate">1.1</field>
            <field name="currency_id" ref="base.EUR"/>
            <field name="company_id" ref="base.main_company"/>
        </record>
        <record id="demo_currency_rate_jpy" model="res.currency.rate">
            <field name="name">2025-03-19</field>
            <field name="rate">0.0067</field>
            <field name="currency_id" ref="base.JPY"/>
            <field name="company_id" ref="base.main_company"/>
        </record>
        <record id="demo_currency_rate_cny" model="res.currency.rate">
            <field name="name">2025-03-19</field>
            <field name="rate">0.14</field>
            <field name="currency_id" ref="base.CNY"/>
            <field name="company_id" ref="base.main_company"/>
        </record>
        <record id="demo_currency_rate_brl" model="res.currency.rate">
            <field name="name">2025-03-19</field>
            <field name="rate">0.17</field>
            <field name="currency_id" ref="base.BRL"/>
            <field name="company_id" ref="base.main_company"/>
        </record>
        <record id="demo_currency_rate_cad" model="res.currency.rate">
            <field name="name">2025-03-19</field>
            <field name="rate">0.70</field>
            <field name="currency_id" ref="base.CAD"/>
            <field name="company_id" ref="base.main_company"/>
        </record>
    </data>
</odoo>
