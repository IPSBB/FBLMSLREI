<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_margin_selling_view_form" model="ir.ui.view">
        <field name="name">pos.margin.selling.view.form</field>
        <field name="model">pos.margin.selling</field>
        <field name="arch" type="xml">
            <form string="Products Details">
                <group>
                    <group>
                        <field name="type" widget="radio" required="1"/>
                    </group>
                    <group>
                        <field name="start_date" required="0" invisible="type == 'session'"/>
                        <field name="end_date" required="0" invisible="type == 'session'"/>
                        <field name="pos_session_id" required="0" invisible="type == 'date'"/>
                    </group>
                </group>
                <footer>
                    <button name="action_generate_report" string="Print"
                            type="object"
                            class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary"
                            special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>