<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Get pickings generated from purchase orders -->
        <function model="purchase.order" name="_create_picking">
            <value eval="[ref('demo_po_nafta'), ref('demo_po_eu'), ref('demo_po_asia'), ref('demo_po_network'), ref('demo_po_south_america'), ref('demo_po_us_smartphone'), ref('demo_po_us_ev')]"/>
        </function>        
        <!-- Get pickings generated from purchase orders -->
        <function model="purchase.order" name="_compute_picking_ids">
            <value eval="[ref('demo_po_nafta'), ref('demo_po_eu'), ref('demo_po_asia'), ref('demo_po_network'), ref('demo_po_south_america'), ref('demo_po_us_smartphone'), ref('demo_po_us_ev')]"/>
        </function>

        <!-- Validate the first batch of receipts (partial) -->
        <function model="purchase.order" name="action_view_picking">
            <value eval="ref('demo_po_nafta')"/>
        </function>
        <function model="purchase.order" name="action_view_picking">
            <value eval="ref('demo_po_eu')"/>
        </function>
        <function model="purchase.order" name="action_view_picking">
            <value eval="ref('demo_po_asia')"/>
        </function>
        <function model="purchase.order" name="action_view_picking">
            <value eval="ref('demo_po_network')"/>
        </function>
        <function model="purchase.order" name="action_view_picking">
            <value eval="ref('demo_po_south_america')"/>
        </function>
        <function model="purchase.order" name="action_view_picking">
            <value eval="ref('demo_po_us_smartphone')"/>
        </function>
        <function model="purchase.order" name="action_view_picking">
            <value eval="ref('demo_po_us_ev')"/>
        </function>

        <!-- Process pickings one by one by confirming and validating them -->
        <function model="stock.picking" name="button_validate">
            <value model="stock.picking" search="[('origin', '=', 'DEMO-PO-NAFTA')]"/>
        </function>
        <function model="stock.picking" name="button_validate">
            <value model="stock.picking" search="[('origin', '=', 'DEMO-PO-EU')]"/>
        </function>
        <function model="stock.picking" name="button_validate">
            <value model="stock.picking" search="[('origin', '=', 'DEMO-PO-ASIA')]"/>
        </function>
        <function model="stock.picking" name="button_validate">
            <value model="stock.picking" search="[('origin', '=', 'DEMO-PO-NETWORK')]"/>
        </function>
        <function model="stock.picking" name="button_validate">
            <value model="stock.picking" search="[('origin', '=', 'DEMO-PO-SOUTH-AMERICA')]"/>
        </function>
        <function model="stock.picking" name="button_validate">
            <value model="stock.picking" search="[('origin', '=', 'DEMO-PO-US-SMARTPHONE')]"/>
        </function>
        <function model="stock.picking" name="button_validate">
            <value model="stock.picking" search="[('origin', '=', 'DEMO-PO-US-EV')]"/>
        </function>
    </data>
</odoo>
